@model IEnumerable<Product>


<section class="tabs_pro py-md-5 pt-sm-3 pb-5">
    <div class="tabs tabs-style-line pt-md-5">
        <div id="clothing-nav-content" class="tab-content py-sm-5">

            <div role="tabpanel" class="tab-pane fade show active"
                 id="women" aria-labelledby="women-tab">
                <div id="owl-demo" class="owl-carousel text-center">
                    @foreach (Product product in Model)
                    {


                        <div class="item">
                            <!-- card -->
                            <div class="card product-men p-3">
                                <div class="men-thumb-item">
                                    <img src="~/ProductImages/Bed1.jpg" alt="img" 
                                         class="card-img-top">
                                    <div class="men-cart-pro">
                                        <div class="inner-men-cart-pro">
                                            <a href="womens.html"
                                               class="link-product-add-cart">Quick View</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- card body -->
                                <div class="card-body  py-3 px-2">
                                    @if (product.ProductImageMappings != null && product.ProductImageMappings.Any())
                                    {
                                        <h5 class="card-title text-capitalize">
                                            @(product.ProductImageMappings
    .OrderBy(pim => pim.ImageNumber).ElementAt(0).ProductImage.FileName)
                                        </h5>}
                                    <div class="card-text d-flex justify-content-between">
                                        <p class="text-dark font-weight-bold">$28.00</p>
                                        <p class="line-through">$35.99</p>
                                    </div>
                                </div>
                            <!-- card footer -->
                            <div class="card-footer d-flex justify-content-end">
                                <form action="#" method="post">
                                    <input type="hidden" name="cmd" value="_cart">
                                    <input type="hidden" name="add" value="1">
                                    <input type="hidden" name="hub_item" value="Self Design Women's Tunic">
                                    <input type="hidden" name="amount" value="28.00">
                                    <button type="submit" class="hub-cart phub-cart btn">
                                        <i class="fa fa-cart-plus" aria-hidden="true"></i>
                                    </button>
                                    <a href="#" data-toggle="modal" data-target="#myModal1"></a>
                                </form>
                            </div>
                        </div>
                        <!-- //card -->
                    </div>
                }
                <div class="item">
                    <div class="product-men p-3 text-center">
                        <img src="/images/p2.png" class="img-responsive" alt="" />
                        <a href="women.html" class="btn btn-lg bg-info text-white">view more</a>
                    </div>
                </div>



                </div>
            </div>



        </div>

    </div>
</section>




